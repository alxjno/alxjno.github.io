<?xml version="1.0" encoding="utf-8" ?>
<data>

    <events>
		<event id="btnover">
			<rollover>
				<css add="btnOver">this</css>
			</rollover>
			
			<rollout>
				<css remove="btnOver">this</css>
			</rollout>
		</event>

		<event id="optionover">
			<rollover>
				<css add="optionOver">this</css>
			</rollover>
			
			<rollout>
				<css remove="optionOver">this</css>
			</rollout>

			<click>
				<css add="optionOver">this</css>
			</click>
		</event>
		
		<event id="select">
			<click>
				<function name="select">this</function>
			</click>
		</event>

		<event id="selectandsubmit">
			<click>
				<function name="select">this</function>
				<function name="submit">this</function>
			</click>
		</event>

		<event id="submit">
			<click>
				<function name="submit">this</function>
			</click>
		</event>

		<event id="reset">
			<click>
				<function name="reset">this</function>
			</click>
		</event>

		<event id="sca">
			<click>
				<function name="sca">this</function>
			</click>
		</event>
    </events>    

    <custom type="mcq" id="mcq" class="col-md-10 col-md-offset-1">
        <settings cheatmode="false" radiobutton="false" radiobuttonx="10" radiobuttony="10" correctx="calc(100% - 30px)" correcty="5" attempts="2"/>

        <question id="q1" event="">
        	<div class="col-md-12">
    			<text id="question" max-width="400" margin-top="40" margin-bottom="40" anim="left" animtime="0.5"><![CDATA[<h1>Will I need to be a JavaScript programmer to build a multiple choice question?</h1>]]></text>
			</div>

    		<div id="leftcol" class="col-md-6" />
    		<div id="rightcol" class="col-md-6" />
			
			<!--option 1 -->
			<option correct="false">
				<text target="leftcol" max-width="400" margin-bottom="10" anim="show" animtime="0.5" animdelay="0.5" event="optionover,select" class="optionBox"><![CDATA[<p>Yes</p>]]></text>
			</option>
			
			<!--option 2 -->	
			<option correct="true">
				<text target="leftcol" max-width="400" margin-bottom="10" anim="show" animtime="0.5" animdelay="0.6" event="optionover,select" class="optionBox"><![CDATA[<p>No</p>]]></text>
			</option>

			<!--option 3 -->	
			<option correct="false">
				<text target="leftcol" max-width="400" margin-bottom="20" anim="show" animtime="0.5" animdelay="0.6" event="optionover,select" class="optionBox"><![CDATA[<p>Not sure</p>]]></text>
			</option>
			<!--/options -->

			<button id="submitBtn" target="leftcol" margin-right="10" margin-bottom="20" anim="disabled" animtime="0.3" animdelay="0.7" event="btnover,submit"><![CDATA[Confirm]]></button>
			<button id="resetBtn" target="leftcol" margin-right="10" margin-bottom="20" anim="disabled" animtime="0.3" animdelay="0.7" event="btnover,reset"><![CDATA[Reset]]></button>
			<button id="scaBtn" target="leftcol" margin-bottom="20" anim="hide" animtime="0.3" animdelay="0.7" event="btnover,sca"><![CDATA[See correct answer]]></button>

			<!-- feedbacks -->
			<fb id="pass" event="">	
				<text target="rightcol" margin-top="0" max-width="400" anim="bottom" animtime="0.5" class="lightBox"><![CDATA[<p class="p_24">Correct!</p><p>All the text, images, events and buttons are defined in XML so you can create your own question without changing any JavaScript.</p>]]></text>
			</fb>
			
			<fb id="fail" event="">	
				<text target="rightcol" margin-top="0" max-width="400" anim="bottom" animtime="0.5" class="lightBox"><![CDATA[<p class="p_24">Nope!</p><p>All the text, images, events and buttons are defined in XML so you can create your own question without changing any JavaScript.</p>]]></text>
			</fb>

			<fb id="generic">
				<text target="rightcol" margin-top="0" max-width="400" anim="bottom" animtime="0.5" class="lightBox"><![CDATA[<p class="p_24">The correct answer is No!</p><p>All the text, images, events and buttons are defined in XML so you can create your own question without changing any JavaScript.</p>]]></text>
			</fb>
		</question>

    </custom>

</data>

