<?xml version="1.0" encoding="utf-8" ?>
<data>

    <events>
    	<event id="screenloaded">
			<click>
				<function name="begin">this</function>
			</click>
		</event>

		<event id="btnover">
			<rollover>
				<css add="btnOver">this</css>
			</rollover>
			
			<rollout>
				<css remove="btnOver">this</css>
			</rollout>
		</event>

		<event id="optionover">
			<rollover>
				<css add="optionOver">this</css>
			</rollover>
			
			<rollout>
				<css remove="optionOver">this</css>
			</rollout>

			<click>
				<css add="optionOver">this</css>
			</click>
		</event>

		<event id="imgover">
			<rollover>
				<css name="imgOver">this</css>
			</rollover>
			
			<rollout>
				<css name="imgOut">this</css>
			</rollout>

			<click>
				<css name="imgOver">this</css>
			</click>
		</event>

		<event id="select">
			<click>
				<function name="select">this</function>
			</click>
		</event>

		<event id="selectandsubmit">
			<click>
				<function name="select">this</function>
				<function name="submit">this</function>
			</click>
		</event>

		<event id="submit">
			<click>
				<function name="submit">this</function>
			</click>
		</event>

		<event id="reset">
			<click>
				<function name="reset">this</function>
			</click>
		</event>

		<event id="sca">
			<click>
				<function name="sca">this</function>
			</click>
		</event>

        <event id="loadNextQuestion">
            <click>
                <function name="loadNextQuestion">this</function>
            </click>
        </event>
		
		<event id="restart">
            <click>
                <function name="restart">this</function>
            </click>
        </event>

        <event id="sendResult">
            <click>
                <function name="sendResultJSON" />
            </click>
        </event>

        <event id="loadAnotherPage">
			<click>
				<url address="http://www.essemble.co.uk" window="true">this</url>
			</click>
		</event>
    </events>    

    <!--timer-->
    <div id="timerContainer" anim="none" class="timerContainer"/>

    <!--quiz-->
    <custom type="quiz" id="quiz" width="100%">
		<settings cheatmode="false" timer="false" radiobutton="true" radiobuttonx="10" radiobuttony="10" correctx="calc(100% - 30px)" correcty="5" attempts="1"/>
        
		<!-- question 1 -->
        <question id="q1" time="15" event="">

    		<image margin-bottom="40" anim="show" animtime="1" src="http://www.placehold.it/800x500"/>

    		<text id="question" margin-bottom="30" anim="none"><![CDATA[<p class="p_24">Will I need to be a JavaScript programmer to build a quiz?</p>]]></text>

			<!--option 1 -->
			<option correct="false">
				<text margin-bottom="5" anim="none" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p>Yes</p>]]></text>
			</option>
			
			<!--option 2 -->	
			<option correct="true">
				<text margin-bottom="5" anim="none" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p>No</p>]]></text>
			</option>
			
			<!-- feedbacks -->
			<fb id="pass" event="">	

				<text anim="none" margin-top="30" margin-bottom="30"><![CDATA[<p class="p_24">Correct!</p><p>All the questions, text, images, events and buttons are defined in XML so you can create your own quiz without changing any JavaScript.</p><p>You can also customise the timer by changing some simple settings and css. Or choose not to have a timer at all.</p>]]></text>
		
				<button target="footer_next" anim="none" event="btnover,loadNextQuestion"><![CDATA[Next]]></button>
			</fb>
			
			<fb id="fail" event="">

				<text anim="none" margin-top="30" margin-bottom="30"><![CDATA[<p class="p_24">Nope!</p><p>All the questions, text, images, events and buttons are defined in XML so you can create your own quiz without changing any JavaScript.</p><p>You can also customise the timer by changing some simple settings and css. Or choose not to have a timer at all.</p>]]></text>
		
				<button target="footer_next" anim="none" event="btnover,loadNextQuestion"><![CDATA[Next]]></button>
			</fb>
		</question>

		<!-- question 2 -->
        <question id="q2" time="15" event="">

    		<image margin-bottom="30" anim="show" animtime="1" src="http://www.placehold.it/800x500"/>

    		<text id="question" margin-bottom="30" anim="none"><![CDATA[<p class="p_24">The number of questions I can add is:</p>]]></text>

			<!--option 1 -->
			<option correct="false">
				<text margin-bottom="5" anim="none" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p>Limited to 5</p>]]></text>
			</option>
			
			<!--option 2 -->	
			<option correct="false">
				<text margin-bottom="5" anim="none" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p>Limited to 10</p>]]></text>
			</option>

			<!--option 3 -->	
			<option correct="true">
				<text margin-bottom="5" anim="none" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p>Unlimited</p>]]></text>
			</option>
			<!--/options -->
			
			<!-- feedbacks -->
			<fb id="pass" event="">	

				<text anim="none" margin-top="30" margin-bottom="30"><![CDATA[<p class="p_24">Correct!</p><p>You can add as many questions as you like.</p>]]></text>
		
				<button target="footer_next" anim="none" event="btnover,loadNextQuestion"><![CDATA[Next]]></button>

			</fb>
			
			<fb id="fail" event="">	

				<text anim="none" margin-top="30" margin-bottom="30"><![CDATA[<p class="p_24">No!</p><p>You can add as many questions as you like.</p>]]></text>
		
				<button target="footer_next" anim="none" event="btnover,loadNextQuestion"><![CDATA[Next]]></button>
			</fb>
		</question>

		<!-- question 3 -->
        <question id="q3" time="15" event="">

    		<image margin-bottom="30" anim="show" animtime="1" src="http://www.placehold.it/800x500"/>

    		<text id="question" margin-bottom="30" anim="none"><![CDATA[<p class="p_24">If there is more than one correct option, can the engine handle it?</p>]]></text>

			<!--option 1 -->
			<option correct="true">
				<text margin-bottom="5" anim="none" event="optionover,select" class="optionBox checkbox"><![CDATA[<p>Yes. For example, this option is flagged as correct.</p>]]></text>
			</option>
			
			<!--option 2 -->	
			<option correct="true">
				<text margin-bottom="5" anim="none" event="optionover,select" class="optionBox checkbox"><![CDATA[<p>And this option is <i>also</i> flagged as correct.</p>]]></text>
			</option>

			<!--option 3 -->	
			<option correct="false">
				<text margin-bottom="5" anim="none" event="optionover,select" class="optionBox checkbox"><![CDATA[<p>But this option is flagged as incorrect.</p>]]></text>
			</option>
			<!--/options -->

			<button id="submitBtn" margin-top="20" margin-right="10" anim="disable" event="btnover,submit"><![CDATA[Confirm]]></button>
			<button id="resetBtn" margin-top="20" margin-right="10" anim="hide" event="btnover,reset"><![CDATA[Reset]]></button>
			<button id="scaBtn" margin-top="20" anim="hide" event="btnover,sca"><![CDATA[See correct answer]]></button>
			
			<!-- feedbacks -->
			<fb id="pass" event="">	

				<text anim="none" margin-top="30" margin-bottom="30"><![CDATA[<p class="p_24">Well done!</p><p>You selected all the correct answers. If you had selected <i>some</i> of the correct options, you would have generated "partially correct" feedback.</p>]]></text>
		
				<button target="footer_next" anim="none" event="btnover,loadNextQuestion"><![CDATA[Next]]></button>
			</fb>

			<fb id="partial" event="">	

				<text anim="none" margin-top="30" margin-bottom="30"><![CDATA[<p class="p_24">You selected some but not <i>all</i> of the correct options.</p><p>This is the "partial" feedback. <b>Reset</b> and <b>See correct answer</b> buttons are optional if you want to allow the user to retry and/or see the model answer.</p>]]></text>
		
				<button target="footer_next" anim="none" event="btnover,loadNextQuestion"><![CDATA[Next]]></button>
			</fb>
			
			<fb id="fail" event="">	

				<text anim="none" margin-top="30" margin-bottom="30"><![CDATA[<p class="p_24">Bad luck!</p><p>You didn't select any of the correct options. <b>Reset</b> and <b>See correct answer</b> buttons are optional if you want to allow the user to retry and/or see the model answer.</p>]]></text>
		
				<button target="footer_next" anim="none" event="btnover,loadNextQuestion"><![CDATA[Next]]></button>
			</fb>
		</question>

		<!-- question 4 -->
        <question id="q4" time="15" event="">

    		<image margin-bottom="30" anim="show" animtime="1" src="http://www.placehold.it/800x500"/>

    		<text id="question" margin-bottom="30" anim="none"><![CDATA[<p class="p_24">Is option specific feedback supported?</p>]]></text>

			<!--option 1 -->
			<option correct="true">
				<text margin-bottom="5" anim="none" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p>Yes, this will generate feedback for option 1 (correct).</p>]]></text>
			</option>
			
			<!--option 2 -->	
			<option correct="false">
				<text margin-bottom="5" anim="none" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p>Yes, this will generate feedback for option 2.</p>]]></text>
			</option>

			<!--option 3 -->	
			<option correct="false">
				<text margin-bottom="5" anim="none" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p>Yes, this will generate feedback for option 3.</p>]]></text>
			</option>
			<!--/options -->
			
			<!-- feedbacks -->
			<!-- option specific feedbacks override pass/partial/fail feedback -->
			<fb id="1" event="">	

				<text margin-top="30" margin-bottom="30" anim="none"><![CDATA[<p class="p_24">Great!</p><p>This is the feedback for option 1 which is the correct option.</p>]]></text>
		
				<button target="footer_next" margin-bottom="30" anim="none" event="btnover,loadNextQuestion"><![CDATA[Next]]></button>
			</fb>
			
			<fb id="2" event="">	

				<text margin-top="30" margin-bottom="30" anim="none"><![CDATA[<p class="p_24">Option 2?</p><p>This is specific feedback for option 2 and unfortunately that was <i>not</i> the correct option.</p>]]></text>
		
				<button target="footer_next" anim="none" event="btnover,loadNextQuestion"><![CDATA[Next]]></button>
			</fb>

			<fb id="3" event="">	

				<text margin-top="30" margin-bottom="30" anim="none"><![CDATA[<p class="p_24">Option 3?</p><p>This is the specific feedback for option 3 and unfortunately that was <i>not</i> the correct option.</p>]]></text>
		
				<button target="footer_next" anim="none" event="btnover,loadNextQuestion"><![CDATA[Next]]></button>
			</fb>
		</question>

		<!-- question 5 -->
        <question id="q5" time="15" event="">

    		<image margin-bottom="30" anim="show" animtime="1" src="http://www.placehold.it/800x500"/>

    		<text id="question" margin-bottom="30" anim="none"><![CDATA[<p class="p_24">Can I do any of the following?</p>]]></text>

			<!--option 1 -->
			<option correct="true">
				<text margin-bottom="5" anim="none" event="optionover,select" class="optionBox checkbox"><![CDATA[<p>Change the time allowed for each question</p>]]></text>
			</option>
			
			<!--option 2 -->	
			<option correct="true">
				<text margin-bottom="5" anim="none" event="optionover,select" class="optionBox checkbox"><![CDATA[<p>Not use a timer at all</p>]]></text>
			</option>

			<!--option 3 -->	
			<option correct="true">
				<text margin-bottom="5" anim="none" event="optionover,select" class="optionBox checkbox"><![CDATA[<p>Use images as options instead of text</p>]]></text>
			</option>

			<!--option 4 -->	
			<option correct="true">
				<text margin-bottom="5" anim="none" event="optionover,select" class="optionBox checkbox"><![CDATA[<p>Set the passmark percentage</p>]]></text>
			</option>

			<!--option 5 -->	
			<option correct="true">
				<text margin-bottom="5" anim="none" event="optionover,select" class="optionBox checkbox"><![CDATA[<p>Change the animations and timings for individual elements</p>]]></text>
			</option>

			<!--option 6 -->	
			<option correct="true">
				<text margin-bottom="5" anim="none" event="optionover,select" class="optionBox checkbox"><![CDATA[<p>Change the styles, text, graphics and layout</p>]]></text>
			</option>
			<!--/options -->

			<button id="submitBtn" margin-top="20" margin-right="10" anim="disable" event="btnover,submit"><![CDATA[Confirm]]></button>
			<button id="resetBtn" margin-top="20" margin-right="10" anim="hide" event="btnover,reset"><![CDATA[Reset]]></button>
			<button id="scaBtn" margin-top="20" anim="hide" event="btnover,sca"><![CDATA[See correct answer]]></button>
			
			<!-- feedbacks -->
			<fb id="pass" event="">	

				<text anim="none" margin-top="30" margin-bottom="30"><![CDATA[<p class="p_24">Yes!</p><p>You can do all of these things, just by changing XML attributes and css!</p>]]></text>
		
				<button target="footer_next" anim="none" event="btnover,loadNextQuestion"><![CDATA[Next]]></button>
			</fb>

			<fb id="partial" event="">	

				<text anim="none" margin-top="30" margin-bottom="30"><![CDATA[<p class="p_24">You got some but not all.</p><p>Actually you can do <i>all</i> of these things, just by changing XML attributes and css!</p>]]></text>
		
				<button target="footer_next" anim="none" event="btnover,loadNextQuestion"><![CDATA[Next]]></button>
			</fb>
			
			<fb id="fail" event="">	

				<text anim="none" margin-top="30" margin-bottom="30"><![CDATA[<p class="p_24">Nope!</p><p>Actually you can do <i>all</i> of these things, just by changing XML attributes and css!</p>]]></text>
		
				<button target="footer_next" anim="none" event="btnover,loadNextQuestion"><![CDATA[Next]]></button>
			</fb>

			<fb id="generic" event="">	

				<text anim="none" margin-top="30" margin-bottom="30"><![CDATA[<p class="p_24">Actually you can do <i>all</i> of these things, just by changing XML attributes and css!</p>]]></text>
		
				<button target="footer_next" anim="none" event="btnover,loadNextQuestion"><![CDATA[Next]]></button>
			</fb>
		</question>

		<!-- question 6, demonstrates images as options-->
        <question id="q6" time="15" event="">

    		<image margin-bottom="40" anim="show" animtime="1" src="http://www.placehold.it/800x500"/>

    		<text id="question" margin-bottom="30" anim="none"><![CDATA[<p class="p_24">Can I use images instead of text? Select the footprint!</p>]]></text>

			<!--option 1 -->
			<option correct="true">
				<image overflow="hidden" display="inline-block" max-width="150" margin-right="10" anim="none" animtime="0" event="imgover,selectandsubmit" class="img-border" src="lib/assets/nasa_correct4.jpg" />
			</option>
			
			<!--option 2 -->	
			<option correct="false">
				<image overflow="hidden" display="inline-block" max-width="150" anim="none" animtime="0" event="imgover,selectandsubmit" class="img-border" src="lib/assets/nasa_correct5.jpg" />
			</option>
			<!--/options -->
			
			<!-- feedbacks -->
			<fb id="pass" event="">	

				<text anim="none" margin-top="30" margin-bottom="30"><![CDATA[<p class="p_24">Correct!</p><p>You certainly can.</p>]]></text>

				<button target="footer_next" anim="none" event="btnover,loadNextQuestion"><![CDATA[My result]]></button>
			</fb>
			
			<fb id="fail" event="">	

				<text anim="none" margin-top="30" margin-bottom="30"><![CDATA[<p class="p_24">You certainly can!</p><p>This option is marked as incorrect.</p><p>]]></text>
		
				<button target="footer_next" anim="none" event="btnover,loadNextQuestion"><![CDATA[My result]]></button>
			</fb>
		</question>
		
		
		<!--generic timeout text-->
		<timeout>
			<image margin-bottom="30" anim="top" animtime="1" animdelay="0.3" ease="Bounce.easeOut" src="http://www.placehold.it/800x500"/>

			<text margin-bottom="30" anim="top" animtime="1" animdelay="0.2" ease="Bounce.easeOut"><![CDATA[<p class="p_42 grey">Times up!</p>]]></text>
	
			<button margin-bottom="30" anim="top" animtime="1" animdelay="0.1" ease="Bounce.easeOut" event="btnover,restart"><![CDATA[Start again]]></button>
        </timeout>


        <!--score screen-->
        <score masteryscore="80">
           <pass event="sendResult">
           		<image margin-bottom="30" anim="top" animtime="1" animdelay="0.3" ease="Bounce.easeOut" src="http://www.placehold.it/800x500"/>

				<text margin-bottom="30" anim="top" animtime="1" animdelay="0.2" ease="Bounce.easeOut"><![CDATA[<p class="p_30">CONGRATULATIONS!</p><p class="p_24">You scored [score]%</p>]]></text>

